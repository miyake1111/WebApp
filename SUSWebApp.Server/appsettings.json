{
  // アプリケーション全体の設定ファイル
  // 全環境で共通の設定を定義

  // ログ設定
  "Logging": {
    // ログレベルの設定
    "LogLevel": {
      // デフォルトのログレベル
      // Information: 一般的な情報をログ出力
      "Default": "Information",

      // ASP.NET Coreフレームワークのログレベル
      // Warning: 警告とエラーのみ（詳細ログを抑制）
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // 許可されるホスト
  // "*"はすべてのホストからのアクセスを許可
  // 本番環境では特定のホストに制限すべき
  "AllowedHosts": "*",

  // データベース接続文字列
  "ConnectionStrings": {
    // PostgreSQLデータベースへの接続設定
    "DefaultConnection": "Host=localhost;Database=postgres;Username=postgres;Password=ms369369"
    // Host: データベースサーバーのアドレス
    // Database: 使用するデータベース名
    // Username: PostgreSQLユーザー名
    // Password: パスワード（本番環境では環境変数使用推奨）
  }
}